{
	"name": "QT Wayland",
	"homepage": "https://wiki.qt.io/QtWayland",
	"scm": {
        "type": "git",
        "url": "git://code.qt.io/qt/qtwayland.git",
        "default-branch": "dev"
    },
    "dependencies": {
        "latest": {
            "qt5" : "any"
        }
    },
    "recipe": [
        {
            "step":"configure",
            "cmd":"${DEPENDENCY::QT5::ROOTPATH}/bin/qmake ${PACKAGE_SRC_PATH}/qtwayland.pro"
        },
        {
            "step":"build",
            "cmd":"${MAKE}"
        },
        {
            "step":"install",
            "actions":[
                {"cmd":"${MAKE} install"}
            ]
        }
    ]
}
